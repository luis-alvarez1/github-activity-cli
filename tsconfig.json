{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext", // Keep ESNext for ESM
        "moduleResolution": "node", // Ensure node-style resolution
        "esModuleInterop": true, // Ensure compatibility with CommonJS modules
        "outDir": "dist", // Keep the dist directory
        "sourceMap": true, // Keep source maps for debugging
        "strict": true, // Enable strict type checking
        "resolveJsonModule": true // Allow JSON imports (if needed)
    },
    "include": [
        "src/**/*.ts" // Include all TypeScript files under src
    ],
    "exclude": [
        "node_modules" // Exclude node_modules
    ]
}
